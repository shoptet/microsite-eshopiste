{% extends "base.twig" %}

{% block head %}
	<meta property="og:url" content="{{ post.link }}">
	<meta property="og:type" content="article">

	{% if post.thumbnail %}
		<meta property="og:image" content="{{ post.thumbnail.src('large') }}">
	{% endif %}
{% endblock %}

{% block content %}
	<div class="page-row">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">

					<article itemscope itemtype="https://schema.org/Article">
						<meta itemprop="url" content="{{post.link}}">
					  {% if post.thumbnail %}
					    <meta itemprop="image" content="{{ post.thumbnail }}">
					  {% endif %}
						<meta itemprop="headline" content="{{ post.title }}">
					  <div itemprop="author publisher" itemscope itemtype="http://schema.org/Organization">
					    <meta itemprop="name" content="{{ site.name }}">
					  </div>
						<meta itemprop="datePublished" content="{{ post.date('Y-m-d') }}">
						<h1 class="page-row-title">{{ post.title }}</h1>

						{% if post.thumbnail %}
							<img
								class="page-row-thumbnail"
								src="{{ post.thumbnail.src('large') }}"
								alt="{{ post.title }}"
							>
						{% endif %}

						<div itemprop="articleBody">
							{{post.content}}
						</div>
					</article>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
