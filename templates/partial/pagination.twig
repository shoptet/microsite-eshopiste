<nav aria-label="Stránkování seznamu nabídek">
  <ul class="pagination justify-content-center">

    {% if pagination.prev %}
      <li class="page-item">
        <a class="page-link" href="{{ pagination.prev.link }}">Předchozí</a>
      </li>
    {% endif %}

    {% for page in pagination.pages %}
      {% if page.link %}
        <li class="page-item">
          <a class="page-link" href="{{ page.link }}">{{ page.title }}</a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <a class="page-link" href="#" tabindex="-1">{{ page.title }}</a>
        </li>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <li class="page-item">
        <a class="page-link" href="{{ pagination.next.link }}">Další</a>
      </li>
    {% endif %}

  </ul>
</nav>
