<header role="banner" itemscope itemtype="https://schema.org/WebSite">

  <meta itemprop="headline" content="
    {% if wp_title %}
      {{ wp_title }}, {{ site.name }}
    {% else %}
      {{ site.name }}, {{ site.description }}
    {% endif %}
  ">
  <meta itemprop="url" content="{{ site.url }}">
  <meta itemprop="text" content="{{ meta_description|striptags }}">

  <div class="header">
  	<div class="container">
      <div class="header-inner">

        <div class="header-controls">
      		<a
      			class="header-logo"
      			href="{{ site.url }}"
      			title="Zpět na domovskou stránku"
      		>
      			<img
      				src="{{ logo_url }}"
      				alt="{{ site.name }}"
      			>
      		</a>

          <div class="header-menu">
            <button role="button" class="btn btn-orange px-3" data-header-button-search aria-label="Zobrazit vyhledávání">
              <span class="iconholder"><i class="fas fa-search" aria-hidden="true"></i></span>
            </button>
            <button role="button" class="btn btn-orange px-3" data-header-button-actions aria-label="Zobrazit nabídku">
              <span class="iconholder"><i class="fas fa-bars" aria-hidden="true"></i></span>
            </button>
          </div>
        </div>

        <div class="header-collapse">

      		<form
      			class="header-search"
            id="headerSearch"
      			action="{{ archive_link }}"
      			role="search"
            itemscope
      			itemprop="potentialAction"
      			itemtype="https://schema.org/SearchAction"
      		>
      			<meta itemprop="target" content="{{ archive_link }}?q={q}">
      			<div class="input-group">
      	      <input
      					type="search"
      					class="form-control border-right-0"
      					name="q"
      					value="{{ search_query }}"
      					placeholder="Vyhledat e-shop"
      					autocomplete="off"
                itemprop="query-input"
      				>
      	      <span class="input-group-append">
      	        <button type="submit" class="btn btn-input px-3 border-left-0" aria-label="Vyhledat">
                  <span class="iconholder"><i class="fas fa-search" aria-hidden="true"></i></span>
                </button>
      	      </span>
            </div>
          </form>

          <div class="header-actions" id="headerActions">
            <a class="btn btn-orange text-uppercase mb-2 mb-sm-0" href="{{ new_eshop_url }}">
              <span class="iconholder"><i class="fas fa-plus-circle" aria-hidden="true"></i></span>
              Přidat e-shop
            </a>
            {% if is_user_logged_in %}
              <span class="dropdown">
                <a class="align-middle py-2 ml-sm-3" role="button" href="{{ admin_url }}" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  {{ user.user_email }}<span class="iconholder"><i class="fas fa-angle-down" aria-hidden="true"></i></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="{{ admin_eshops_url }}">Moje e-shopy</a>
                  <a class="dropdown-item" href="{{ admin_profile_url }}">Můj profil</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="{{ logout_url }}">Odhlásit</a>
                </div>
              </span>
            {% else %}
              <a class="align-middle ml-sm-3" href="{{ login_url }}">
                <span class="iconholder mr-1"><i class="fas fa-user" aria-hidden="true"></i></span>Přihlásit se
              </a>
            {% endif %}
          </div>

        </div>

      </div>
    </div>
	</div>

  <nav class="menu">
    <div class="container">
      <div class="menu-overlay">
        <ul class="menu-nav">
          <li>
            <a href="{{ archive_link }}" role="button" id="menuCategoriesLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Kategorie
              <span class="iconholder"><i class="fas fa-angle-down" aria-hidden="true"></i></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="menuCategoriesLink">
              <a class="dropdown-item" href="{{ archive_link }}">
                Všechny
              </a>
              <div class="dropdown-divider"></div>
              {% for term in all_categories %}
                <a class="dropdown-item" href="{{ archive_link }}?category%5B%5D={{ term.id }}">
                  {{ term.name }}
                </a>
              {% endfor %}
            </div>
          </li>
          {% for item in header_menu.items %}
            <li><a href="{{ item.link }}">{{ item.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>

</header>
