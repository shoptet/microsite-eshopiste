<a class="card text-dark mb-4" style="text-decoration: none" href="{{post.link}}" title="{{ post.title }}">

  <div class="card-body px-3" style="padding-top:.7rem;padding-bottom:.7rem;">
    <p class="h5 font-weight-bold text-truncate mb-0">{{ post.title }}</p>
    <div class="d-flex w-100 justify-content-between">
      <span>
        {% if post.get_field('type') == 0 %}
          Prodej
        {% elseif post.get_field('type') == 1 %}
          Půjčka
        {% elseif post.get_field('type') == 2 %}
          Investor
        {% endif %}
      </span>
      <strong>{{ post.get_field('price') }} Kč</strong>
    </div>
  </div>

  <div
    class="position-relative"
    style="padding-bottom: 62.5%;"
  >
    <img
      class="position-absolute img-fluid border border-left-0 border-right-0"
      src="{{ post.get_field('screen_thumbnail').large.url ?: 'http://via.placeholder.com/1280x800/555/999?text=Náhled+není+k+dispozici' }}"
    >
  </div>

  <div class="card-body px-3 py-2">
    <div class="d-flex w-100 justify-content-between small" title="Za poslední rok">
      <span class="text-muted">Obrat</span>
      <span>{{ post.get_field('turnover') }} Kč</span>
    </div>

    <div class="d-flex w-100 justify-content-between small" title="Za poslední rok">
      <span class="text-muted">Návštěvnost</span>
      <span>{{ post.get_field('traffic') }}</span>
    </div>
  </div>

</a>
